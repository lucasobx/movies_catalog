<%= form_with model: movie do |f| %>
  <%= f.label 'Título' %>
  <%= f.text_field :title %>

  <%= f.label 'Ano de lançamento' %>
  <%= f.number_field :release_year %>

  <%= f.label 'Sinopse' %>
  <%= f.text_area :summary %>

  <%= f.label 'País' %>
  <%= f.text_field :country %>

  <%= f.label 'Duração' %>
  <%= f.number_field :duration %>

  <%= f.label 'Gênero' %>
  <%= f.collection_select :movie_genre_id, MovieGenre.all, :id, :name %>

  <%= f.label 'Diretor' %>
  <%= f.collection_select :movie_director_id, MovieDirector.all, :id, :name %>

  <%= f.label 'Status' %>
  <%= f.select :status, Movie.statuses.keys.map { |status| [status.humanize, status] } %>

  <%= f.label :poster, "Pôster do filme" %>
  <%= f.file_field :poster %>

  <%= f.submit 'Salvar' %>
<% end %>